<resources>

    <properties>
        <property id="autoLocation" type="boolean">true</property>
        <property id="manLocation" type="string"></property>
        <property id="pageOrder" type="boolean">false</property>
        <property id="tempUnits" type="number">0</property>
        <property id="windUnits" type="number">0</property>
        <property id="showUpgrade" type="boolean">true</property>
    </properties>

    <settings>
        <setting propertyKey="@Properties.autoLocation" title="Automatic Location">
            <settingConfig type="boolean" />
        </setting>
        <setting propertyKey="@Properties.manLocation" title="Location Name">
            <settingConfig type="alphaNumeric" />
        </setting>
        <setting propertyKey="@Properties.pageOrder" title="Show Graph First">
            <settingConfig type="boolean" />
        </setting>
        <setting propertyKey="@Properties.tempUnits" title="Temp Units">
            <settingConfig type="list">
                <listEntry value="0">Celsius</listEntry>
                <listEntry value="1">Fahrenheit</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.windUnits" title="Wind Units">
            <settingConfig type="list">
                <listEntry value="0">m/s</listEntry>
                <listEntry value="1">km/h</listEntry>
                <listEntry value="2">mph</listEntry>
                <listEntry value="3">Bft.</listEntry>
                <listEntry value="4">Knots</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.showUpgrade" title="Show Upgrade Page">
            <settingConfig type="boolean" />
        </setting>
    </settings>
</resources>